PAGE_PADDING = 10px

playButton = {
  width: 100px,
  height: 50px,
}

.HomePage
  background-color COLOR_BLUE //temp
  z-index 0; // value doesn't matter, used for child pseudo-elements z-indexing
  position: relative
  height 100%
  .play.Button
    position: absolute
    top 70%
    left "calc(50% - %s)" % (playButton.width / 2)
    width: playButton.width
    height: playButton.height
    font-size 35px
  .HomeNavigation
    position: absolute
    top PAGE_PADDING
    right PAGE_PADDING
