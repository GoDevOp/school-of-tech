modalWidth = 800px
modalHeight = 600px
headerHeight = 20px
contentPadding = 10px

.Modal
  width: modalWidth
  height: modalHeight
  background-color COLOR_YELLOW
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(modalWidth / 2)
  margin-top: -(modalHeight / 2)

  .header
    position: absolute
    height: headerHeight
    width: 100%

    .title
      padding 2px 4px
      text-align: center
      width: 100%
      color COLOR_TEXT_WHITE

    .close
      position: absolute
      top: 0
      right: 0
      padding 4px

  .content
    width: 100%
    height: 100%
    padding: (headerHeight + contentPadding) contentPadding contentPadding contentPadding
