buttonColor = COLOR_PINK
buttonBorder = {
  border-style: solid,
  border-radius: 2px,
  border-width: 1px,
  border-color: COLOR_WHITE,
}
outlineOffset = 10px

// Extra attributes
// .bordered - almost transparent with white border
// .small - small button
// .large - large button
.Button
  position: relative
  color COLOR_TEXT_WHITE
  cursor pointer
  text-transform uppercase
  border-radius buttonBorder.radius
  transition background-color TRANSITION_FAST
  &:not(.bordered)
    background-color buttonColor
    border none
  &:hover
    background-color lighten(buttonColor, 10)
  &:focus
    outline none
    background-color black
  &.bordered
    background-color rgba(COLOR_WHITE, 0.1)
    {buttonBorder}
  &.small
    &:after
      left: - (outlineOffset / 2);
      top: (outlineOffset / 2);
  &:after
    content: '';
    position: absolute;
    z-index: -1;
    border: buttonBorder.border-width solid rgba(COLOR_WHITE, 0.4)
    left: - outlineOffset;
    top: outlineOffset;
    width: 100%;
    height: 100%;
